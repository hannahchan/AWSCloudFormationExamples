{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "A VPC with 3 subnet.",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Parameters": ["VpcCidrBlock", "MapPublicIpOnLaunch"]
        },
        {
          "Label": {
            "default": "Subnet 1"
          },
          "Parameters": ["AvailabilityZone1", "Subnet1CidrBlock"]
        },
        {
          "Label": {
            "default": "Subnet 2"
          },
          "Parameters": ["AvailabilityZone2", "Subnet2CidrBlock"]
        },
        {
          "Label": {
            "default": "Subnet 3"
          },
          "Parameters": ["AvailabilityZone3", "Subnet3CidrBlock"]
        }
      ],
      "ParameterLabels": {
        "VpcCidrBlock": {
          "default": "VPC IPv4 CIDR Block"
        },
        "MapPublicIpOnLaunch": {
          "default": "Map Public IP On Launch"
        },
        "AvailabilityZone1": {
          "default": "Availability Zone"
        },
        "AvailabilityZone2": {
          "default": "Availability Zone"
        },
        "AvailabilityZone3": {
          "default": "Availability Zone"
        },
        "Subnet1CidrBlock": {
          "default": "Subnet IPv4 CIDR Block"
        },
        "Subnet2CidrBlock": {
          "default": "Subnet IPv4 CIDR Block"
        },
        "Subnet3CidrBlock": {
          "default": "Subnet IPv4 CIDR Block"
        }
      }
    }
  },
  "Parameters": {
    "VpcCidrBlock": {
      "Type": "String",
      "Default": "172.16.0.0/16",
      "Description": "The IPv4 CIDR block to be used for the VPC.",
      "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$"
    },
    "MapPublicIpOnLaunch": {
      "Type": "String",
      "AllowedValues": [true, false],
      "Default": false,
      "Description": "Whether public IP addresses are assigned when EC2 Instances are launched."
    },
    "AvailabilityZone1": {
      "Type": "AWS::EC2::AvailabilityZone::Name",
      "Description": "The Availability Zone for the Subnet 1."
    },
    "AvailabilityZone2": {
      "Type": "AWS::EC2::AvailabilityZone::Name",
      "Description": "The Availability Zone for the Subnet 2."
    },
    "AvailabilityZone3": {
      "Type": "AWS::EC2::AvailabilityZone::Name",
      "Description": "The Availability Zone for the Subnet 3."
    },
    "Subnet1CidrBlock": {
      "Type": "String",
      "Default": "172.16.0.0/24",
      "Description": "The IPv4 CIDR block to be used for Subnet 1.",
      "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$"
    },
    "Subnet2CidrBlock": {
      "Type": "String",
      "Default": "172.16.1.0/24",
      "Description": "The IPv4 CIDR block to be used for Subnet 2.",
      "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$"
    },
    "Subnet3CidrBlock": {
      "Type": "String",
      "Default": "172.16.2.0/24",
      "Description": "The IPv4 CIDR block to be used for Subnet 3.",
      "AllowedPattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/([0-9]|[1-2][0-9]|3[0-2]))$"
    }
  },
  "Resources": {
    "Vpc": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {
          "Ref": "VpcCidrBlock"
        },
        "EnableDnsSupport": true,
        "EnableDnsHostnames": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "AWS::StackName"
            }
          }
        ]
      }
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {}
    },
    "InternetGatewayAttachment": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "InternetGatewayId": {
          "Ref": "InternetGateway"
        },
        "VpcId": {
          "Ref": "Vpc"
        }
      }
    },
    "Subnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AvailabilityZone1"
        },
        "CidrBlock": {
          "Ref": "Subnet1CidrBlock"
        },
        "MapPublicIpOnLaunch": {
          "Ref": "MapPublicIpOnLaunch"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${AWS::StackName} - Subnet 1"
            }
          }
        ],
        "VpcId": {
          "Ref": "Vpc"
        }
      }
    },
    "Subnet2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AvailabilityZone2"
        },
        "CidrBlock": {
          "Ref": "Subnet2CidrBlock"
        },
        "MapPublicIpOnLaunch": {
          "Ref": "MapPublicIpOnLaunch"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${AWS::StackName} - Subnet 2"
            }
          }
        ],
        "VpcId": {
          "Ref": "Vpc"
        }
      }
    },
    "Subnet3": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Ref": "AvailabilityZone3"
        },
        "CidrBlock": {
          "Ref": "Subnet3CidrBlock"
        },
        "MapPublicIpOnLaunch": {
          "Ref": "MapPublicIpOnLaunch"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${AWS::StackName} - Subnet 3"
            }
          }
        ],
        "VpcId": {
          "Ref": "Vpc"
        }
      }
    },
    "RouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "Vpc"
        }
      }
    },
    "InternetGatewayRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "Subnet1RouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "SubnetId": {
          "Ref": "Subnet1"
        }
      }
    },
    "Subnet2RouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "SubnetId": {
          "Ref": "Subnet2"
        }
      }
    },
    "Subnet3RouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "RouteTable"
        },
        "SubnetId": {
          "Ref": "Subnet3"
        }
      }
    }
  },
  "Outputs": {
    "Vpc": {
      "Description": "The resource ID of the VPC.",
      "Value": {
        "Ref": "Vpc"
      }
    },
    "DefaultNetworkAcl": {
      "Description": "The default Network ACL ID of the VPC.",
      "Value": {
        "Fn::GetAtt": ["Vpc", "DefaultNetworkAcl"]
      }
    },
    "DefaultSecurityGroup": {
      "Description": "The default Security Group ID of the VPC.",
      "Value": {
        "Fn::GetAtt": ["Vpc", "DefaultSecurityGroup"]
      }
    },
    "Subnet1": {
      "Description": "The resource ID of the Subnet 1.",
      "Value": {
        "Ref": "Subnet1"
      }
    },
    "Subnet2": {
      "Description": "The resource ID of the Subnet 2.",
      "Value": {
        "Ref": "Subnet2"
      }
    },
    "Subnet3": {
      "Description": "The resource ID of the Subnet 3.",
      "Value": {
        "Ref": "Subnet3"
      }
    }
  }
}
